<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- Semi-transparent black shadow -->
            <corners android:radius="13dp"/>
        </shape>
    </item>

    <!-- Main Rectangle (Foreground) -->
    <item android:bottom="4dp" android:left="2dp" android:right="2dp"> <!-- Offset for shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="#FAF9F9"/>
            <corners android:radius="13dp"/>
        </shape>
    </item>

</layer-list>