{
  "rewrites": [
    {
      "source": "/api/appointments",
      "destination": "http://ec2-3-107-23-86.ap-southeast-2.compute.amazonaws.com:8080/api/appointments",
      "has": [
        {
          "type": "header",
          "key": "content-type",
          "value": "application/json"
        },
        {
          "type": "host",
          "value": "it-342-skill-match.vercel.app" 
        }
      ]
    },
    {
      "source": "/api/:path*",
      "destination": "http://ec2-3-107-23-86.ap-southeast-2.compute.amazonaws.com:8080/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "http://ec2-3-107-23-86.ap-southeast-2.compute.amazonaws.com:8080/uploads/:path*"
    },
    { "source": "/register", "destination": "/index.html" },
    { "source": "/:path*", "destination": "/index.html" } 
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}